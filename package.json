{
  "name": "datenguide-api",
  "description": "Datenguide API server",
  "version": "0.0.0",
  "homepage": "",
  "main": "src",
  "keywords": [
    "feathers"
  ],
  "author": {
    "name": "Christian Rijke",
    "email": "hello@christianrijke.de"
  },
  "contributors": [],
  "bugs": {},
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "engines": {
    "node": ">= 6.0.0",
    "yarn": ">= 0.18.0"
  },
  "scripts": {
    "test": "npm run eslint && npm run mocha",
    "lint": "eslint src/. --fix",
    "pretty-quick": "npx pretty-quick --staged",
    "prettier": "npx prettier **/*.js --write",
    "dev": "babel-watch --watch src/templates src/index.js | npx pino-pretty --translateTime ",
    "mocha": "mocha test/ --recursive --exit"
  },
  "dependencies": {
    "@feathersjs/configuration": "^2.0.6",
    "@feathersjs/errors": "^3.3.6",
    "@feathersjs/express": "^1.3.1",
    "@feathersjs/feathers": "^3.3.1",
    "apollo-server-express": "^2.4.2",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "elasticsearch": "^15.4.1",
    "feathers-elasticsearch": "^1.4.0",
    "feathers-envhelpers": "^0.2.0",
    "feathers-hooks-common": "^4.20.2",
    "feathers-logger": "^0.3.2",
    "graphql": "^14.1.1",
    "graphql-server-express": "^1.4.0",
    "helmet": "^3.15.1",
    "lodash": "^4.17.11",
    "path": "^0.12.7",
    "pino": "^5.11.1",
    "pino-pretty": "^2.5.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/preset-env": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "babel-watch": "^7.0.0",
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.3.0",
    "husky": "^1.3.1",
    "mocha": "^6.0.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/proposal-class-properties",
      "@babel/proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 7
    },
    "parser": "babel-eslint",
    "globals": {
      "Teikei": true
    },
    "rules": {
      "no-extra-semi": 2,
      "semi": 0
    },
    "plugins": [
      "babel",
      "jest"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint",
      "pre-commit": "yarn prettier"
    }
  }
}
